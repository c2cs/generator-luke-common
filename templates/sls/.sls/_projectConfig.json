{
	"swagger": "2.0",
	"info": {
		"version": "1.0.0",
		"title": "<%= name %>",
		"description": "<%= description %>",
		"termsOfService": "http://c2cschools.com/terms",
		"contact": {
			"name": "C2CSchools Team",
			"email": "foo@c2cschools.com",
			"url": "http://c2cschools.com"
		},
		"license": {
			"name": "EULA"
		}
	},
	"host": "api.c2cs.io",
	"basePath": "/",
	"schemes": [
		"http",
		"https"
	],
	"consumes": [
		"application/vnd.api+json"
	],
	"produces": [
		"application/vnd.api+json"
	],
	"paths": {
		"<%= httpPath %>": {
			"<%= httpMethod %>": {
				"description": "<%= operationDescription %>",
				"operationId": "<%= operationId %>",
				"responses": {
					"200": {
						"description": "Success response",
						"schema": {
							"type": "object",
							"required": [
								"meta",
								"jsonapi",
								"data"
							],
							"properties": {
								"jsonapi": {
									"type": "object",
									"required": [
										"version"
									],
									"properties": {
										"version": {
											"type": "string"
										}
									}
								},
								"meta": {
									"type": "object",
									"required": [
										"requestId",
										"seriesId"
									],
									"properties": {
										"requestId": {
											"type": "string",
											"description": "unique UUID of current request"
										},
										"seriesId": {
											"type": "string",
											"description": "persistend UUID of initial request for all calls chain"
										}
									}
								},
								"data": {
									"type": "object"
								}
							}
						}
					},
					"default": {
						"description": "unexpected error",
						"schema": {
							"$ref": "#/definitions/errorModel"
						}
					}
				}
			}
		}
	},
	"definitions": {
		"errorModel": {
			"type": "object",
			"required": [
				"meta",
				"jsonapi",
				"errors"
			],
			"properties": {
				"jsonapi": {
					"type": "object",
					"required": [
						"version"
					],
					"properties": {
						"version": {
							"type": "string"
						}
					}
				},
				"meta": {
					"type": "object",
					"required": [
						"requestId",
						"seriesId"
					],
					"properties": {
						"requestId": {
							"type": "string",
							"description": "unique UUID of current request"
						},
						"seriesId": {
							"type": "string",
							"description": "persistend UUID of initial request for all calls chain"
						}
					}
				},
				"errors": {
					"type": "array",
					"items": {
						"type": "object",
						"required": [
							"code",
							"title",
							"detail",
							"url"
						],
						"properties": {
							"code": {
								"type": "string",
								"description": "HTTP status code applicable to this problem"
							},
							"title": {
								"type": "string",
								"description": "short, human-readable summary of the problem"
							},
							"detail": {
								"type": "string",
								"description": "human-readable explanation specific to this occurrence of the problem"
							},
							"url": {
								"type": "string"
							}
						}
					}
				}
			}
		}
	}
}
